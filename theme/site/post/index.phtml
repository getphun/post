<!DOCTYPE html>
<html lang="en-US">
<head>
    <?php if(module_exists('site-meta')): ?>
    <?= $this->meta->head($index); ?>
    <?php endif; ?>
</head>
<body>
    <h1>Posts</h1>
    <ul>
    <?php if($posts): ?>
        <?php foreach($posts as $post): ?>
        <li><a href="<?= $post->page ?>"><?= $post->title ?></a></li>
